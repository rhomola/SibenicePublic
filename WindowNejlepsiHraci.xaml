<Window x:Name="nejlepsiHraci_Window" x:Class="Sibenice.WindowNejlepsiHraci"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sibenice"
        mc:Ignorable="d"
        Title="Nejlepší Hráči" Height="400" Width="350" Icon="/noose.160x256.png" Closed="nejlepsiHraci_Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="VypisNejlepsiHraci_ListBox" Grid.Column="1" Grid.Row="2" Margin="0,10,0,0" ItemsSource="{Binding ListHracu}"/>
        <Label Content="Seznam nejlepších hráčů:" Grid.Column="1" Grid.Row="1"/>


    </Grid>
</Window>
